<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
       android:orientation="vertical"
       android:layout_width="match_parent"

       android:layout_height="wrap_content">
    <com.backpacker.yflLibrary.view.MyBarView
            android:layout_width="match_parent"
            app:barBg="@color/main_titel_bg"
            android:layout_height="wrap_content"
    />
    <RelativeLayout
            android:background="@color/main_titel_bg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
    >
        <ImageView android:layout_width="@dimen/dp_48"
                   android:id="@+id/iv_gm_back"
                   android:scaleType="center"
                   android:padding="@dimen/dp_16"
                   android:onClick="onHomeBack"
                   android:src="@mipmap/ic_back"
                   android:layout_height="match_parent"/>
        <TextView android:layout_width="match_parent"
                  android:text="标题"
                  android:gravity="center"
                  android:id="@+id/activityid"
                  android:textColor="@color/black"
                  android:textSize="@dimen/text_18"
                  android:textStyle="bold"
                  android:layout_centerInParent="true"
                  android:layout_height="match_parent"/>
    </RelativeLayout>
</merge>